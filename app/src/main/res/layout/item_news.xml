<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <ImageView
        android:id="@+id/item_news_image_type"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/widget_original_icon"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_news_title"
        android:textSize="14sp"
        android:textColor="#000"
        android:text="ipjsjfs"
        android:layout_toRightOf="@+id/item_news_image_type"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_news_body"
        android:textSize="12sp"
        android:text="ipjsjfs"

        android:layout_marginLeft="5dp"
        android:layout_below="@+id/item_news_title"

        android:layout_marginTop="3dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_news_author"
        android:text="ipjsjfs"
        android:textSize="10sp"
        android:layout_below="@+id/item_news_body"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_news_times"
        android:text="ipjsjfs"
        android:textSize="10sp"
        android:gravity="right"
        android:drawableLeft="@drawable/shijian"
        android:layout_toRightOf="@+id/item_news_author"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/item_news_body"
        android:layout_marginTop="3dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_news_commentcount"
        android:text="ipjsjfs"
        android:textSize="10sp"
        android:gravity="right"
        android:drawableLeft="@drawable/pinglun"
        android:layout_toRightOf="@+id/item_news_times"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/item_news_body"
        android:layout_marginTop="3dp"/>
</RelativeLayout>
